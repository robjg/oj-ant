<oddjob id='this'>
    <job>
        <sequential>
            <jobs>
                <variables id='v'>
                    <fruit>
                        <value value='Apples'/>
                    </fruit>
                </variables>
                <ant>
                    <tasks>
                        <xml>
                            <tasks>
                                <taskdef name='result'
                                    classname='org.oddjob.ant.AntJobTest$ResultTask'/>
                                <property name='our.fruit'
                                    value='${v.fruit}'/>
                                <property name='v.fruit' value='Pears'/>
                                <result key='one' result='${our.fruit}'/>
                                <result key='two' result='${v.fruit}'/>
                            </tasks>
                        </xml>
                    </tasks>
                </ant>
            </jobs>
        </sequential>
    </job>
</oddjob>
        
