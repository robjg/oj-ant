<oddjob>
    <job>
        <sequential>
            <jobs>
                <ant id='myant'>
                    <output>
                        <identify id='ant-output'>
                            <value>
                                <buffer/>
                            </value>
                        </identify>
                    </output>
                    <tasks>
                        <xml>
                            <tasks>
                                <echo message='${myant.class.classLoader}'/>
                            </tasks>
                        </xml>
                    </tasks>
                </ant>
                <echo>${ant-output}</echo>
            </jobs>
        </sequential>
    </job>
</oddjob>
